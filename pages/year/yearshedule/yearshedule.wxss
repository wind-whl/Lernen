/**index.wxss**/
.container{
  overflow-y: auto;
  box-sizing: border-box;
  width: 100%
}



/*主内容区块*/
.tasks{
  /*background-color: #fff;*/
  height: 91vh;
}




/*！1新任务*/
.new_tasks{
  padding: 0 160rpx 0 40rpx; 
  background-color: #fff;
  line-height: 100rpx;
  color: #405165;
  white-space: nowrap;
}
.new_tasks:active{
  background: #eaecf9;
  box-shadow: 0px 3rpx 3rpx 0px #eee;
  white-space: nowrap;
}





.item_checkbox{
  /*flex-grow: 1;*/
  float: left;
  width: 10%;
}




.item_con{
  /*flex-grow: 1;*/
  padding: 0 20rpx;
  float: left;
  width: 77%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}


.item_ico{
  /* float: right; */
  width: 15%;
  text-align: right;
  /* flex-grow: 1; */
}




/*！2提示条*/
.finish_tip{
  width: 100%;
  height: 48rpx; 
  line-height: 48rpx;
  background-color: #e7edfd;
  color: #a5adc4;
  font-size: 24rpx;
  text-indent: 40rpx;
}





/*！3已完成任务*/
.finish_tasks{
  padding: 0 160rpx 0 40rpx;
  background-color: #fff;
  line-height: 100rpx;
  color: #c1c8d0;
  white-space: nowrap;
}
.finish_tasks:active{
  background: #eaecf9;
  box-shadow: 0px 3rpx 3rpx 0px #eee;
  white-space: nowrap;
}






/*！新增任务*/
.task_inputBox{
  display: flex;
  /*height: 110rpx;*/
  height: 9vh;
  line-height: 9vh;
  padding: 0 30rpx 0 10rpx;
  color: #798293;
  background: #fff;
  box-shadow: 0px -7rpx 7rpx 0px #eee;
}



.task_date{
  border-style: dashed;
  border-width: 1rpx;
  text-align: center;
  position: relative;
  flex-grow: 1;
  color: royalblue;
  
}
.task_date .date_select{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  
}



.task_input{
  border-style: dashed;
  border-width: 1rpx;
  border-color: sandybrown;
  flex-grow: 4;
  height: 9vh;
}
