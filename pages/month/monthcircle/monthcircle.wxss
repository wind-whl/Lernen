/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0;
  box-sizing: border-box;
} 




/*顶部导航栏  */
.nav{
  width: 100%;
  height: 10px;
  margin-top: 10px;
  margin-bottom: 100rpx;
}
/*底部导航栏*/
.ngu{
  width: 100%;
  height: 80px;
  margin-top: 10px;
  margin-bottom: 100rpx;
}


/*年圆圈  */
.inner{
  
  box-sizing: border-box;
  width: 200px;
  height: 200px;
  background-color: #fefefe;
  border: 5px solid #d1c7b7;
  border-radius: 50%;
  box-shadow: 0 0 20px  #ccc;
  
}
.spiner, .filler, .masker{
  margin: -5px;
  width: 100px;
  height: 200px;
  box-sizing: border-box;
  background-color: #fefefe;
  border: 5px solid #33a3dc;
  border-right: none;
  border-top-left-radius: 100px;
  border-bottom-left-radius: 100px;  
}
.spiner,.filler{
 transform-origin:right;
}
.filler{
  margin-top: -200px;
  border-color: #d1c7b7;
}
.masker{
  margin-left: 95px;
  margin-top: -200px;
  transform:rotate(180deg);
}
.year-text{
  font-size: 50px;
  text-align: center;
  line-height: 200px;
  color: #33a3dc;
  display: block;
  margin-top: -200px;
  z-index: 1;
}




/*文字栏  */
.info{
  width: 80%;
}
.info-text{
  display: block;
  text-align: center;
  line-height: 1.8em;
  margin-top: 30px;
  color: #2468a2;
}
.info-name{
  font-size: 80%;
  color:#228fbd;
}
